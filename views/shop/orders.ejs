<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if(orders.length> 0) { %>
                    <ul>
                        <% orders.forEach(order=> { %>

                            <h2>Order #<%= order._id %> - <a href="/orders/<%= order._id %>">Download Invoice</a></h2>
                            <ul>
                                <% order.products.forEach(p => { %>
                                    <li><%= p.product.title %> (x<%= p.quantity %>)</li>
                                <% })%>
                            </ul>
                        <% }) %>
                    </ul>
                    <% } else { %>
                        <h1>Nothing there!</h1>
                    <% } %>
            </main>
        <%- include('../includes/end.ejs') %>